<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPregnancy">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/mainDark"
            android:padding="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="BABYCARE (Midwives)"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/mainDark"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="61dp" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="20dp"
                    android:background="@color/mainDark"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="61dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Pregnancy"
                android:fontFamily="@font/robotoregular"
                android:textAlignment="center"
                android:textSize="15dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/list_babies">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/bmi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage BMI"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/add_mother_background">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/medicine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Medicines"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/listbackground">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/syringe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Courses"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/clinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/profile">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/hospital" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Clinical Conservations"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete this Pregnancy"
                android:gravity="center"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/trash"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>